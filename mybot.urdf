<?xml version="1.0"?>
<robot name="mybot">

  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>

  <material name="transparent_blue">
    <color rgba="0 0 1 0"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.25" length="0.05"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.24" length="0.049"/>
      </geometry>
    </collision>
  </link>

  <link name="body_link">
    <visual>
      <geometry>
        <cylinder radius="0.25" length="0.1"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.24" length="0.099"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_to_body" type="fixed">
    <parent link="base_link"/>
    <child link="body_link"/>
    <origin xyz="0 0 0.075"/>
  </joint>

  <link name="eye_link">
    <visual>
      <origin xyz="0.25 0 0.15"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <joint name="body_to_eye" type="fixed">
    <parent link="body_link"/>
    <child link="eye_link"/>
    <origin xyz="0.25 0 0.15"/>
  </joint>

  <link name="world_link"/>
  <link name="base_link_0"/>
  <link name="base_link_1"/>

  <joint name="x" type="prismatic">
    <limit lower="-4.8" upper="4.8"/>
    <parent link="world_link"/>
    <child link="base_link_0"/>
    <axis xyz="1 0 0"/>
  </joint>

  <joint name="y" type="prismatic">
    <limit lower="-4.8" upper="4.8"/>
    <parent link="base_link_0"/>
    <child link="base_link_1"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="theta" type="continuous">
    <parent link="base_link_1"/>
    <child link="base_footprint"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="base_footprint">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.001"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.001"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0 0 0.025"/>
    <child link="base_link"/>
    <parent link="base_footprint"/>
  </joint>

</robot>
